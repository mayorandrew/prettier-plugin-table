{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": ".",
    "moduleResolution": "node16",
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
